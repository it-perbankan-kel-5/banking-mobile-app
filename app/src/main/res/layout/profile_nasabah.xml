<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:background="#0CFDFD"
        android:fontFamily="@font/oxygen"
        android:gravity="center"
        android:text="Profile Nasabah"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="28sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    AKUN-->
            <TextView
                android:id="@+id/sub_Title_Akun"
                style="@style/Theme.Banking_MobileApp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/oxygen"
                android:gravity="left|center_vertical"
                android:text="Akun"
                android:textColor="#808080"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Nama"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <Button
                android:id="@+id/btn_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Email"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD"/>

            <Button
                android:id="@+id/btn_bahasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Bahasa"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <Button
                android:id="@+id/btn_perbaruidata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Perbarui Data"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <!--    KEAMANANAN-->
            <TextView
                android:id="@+id/sub_Title_Keamanan"
                style="@style/Theme.Banking_MobileApp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/oxygen"
                android:gravity="left|center_vertical"
                android:text="Keamanan"
                android:textColor="#808080"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_biometrik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Biometrik Untuk Login"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <Button
                android:id="@+id/btn_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Pin"
                style="@style/ProfileButton"
                app:backgroundTint="@color/light_blue" />

            <Button
                android:id="@+id/btn_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Password"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <Button
                android:id="@+id/btn_transaksitanpapin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Transaksi Tanpa Pin"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />

            <Button
                android:id="@+id/btn_ubahnomorhandphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚫ Ubah Nomor Handphone"
                style="@style/ProfileButton"
                app:backgroundTint="#0CFDFD" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>